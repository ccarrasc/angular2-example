{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true
	},
	"files": [
		"src/app/app-module.ts",
		"src/main-aot.ts",
		"typings/index.d.ts"
	],
	"angularCompilerOptions": {
		"genDir": "build",
		"skipMetadataEmit": true
	}
}